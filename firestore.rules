rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /paciente/{patientId} {
      allow read, write: if request.auth != null;
    }
    match /journal_entries/{entryId} {
      allow get: if request.auth.uid == resource.data.userId;
      
      // FINAL TEST: Allow list if the user is simply authenticated.
      // This removes the check on the query content.
      allow list: if request.auth != null;

      allow write: if request.auth.uid == request.resource.data.userId;
    }
    match /psychologists/{psychologistId} {
      allow read, write: if request.auth != null;
    }
  }
}