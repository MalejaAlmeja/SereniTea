rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Journal Entries: Users can only read/write their own entries.
    match /journal_entries/{entryId} {
      allow read, create: if request.auth != null;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Assigned Tasks: Users can manage their own tasks.
    match /assigned_tasks/{taskId} {
      // Allow read and create if the user is authenticated.
      allow read, create: if request.auth != null;
      // Allow update and delete only if the user is the owner of the task.
      allow update, delete: if isOwner(resource.data.userId);
    }
  }
}
